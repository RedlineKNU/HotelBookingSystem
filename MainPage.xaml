<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelBookingSystem.MainPage">
    <StackLayout>
        <!-- Ваш існуючий інтерфейс -->

        <!-- Заголовки для таблиці -->
        <Grid Padding="10" ColumnDefinitions="*, 2*, *, *, *" RowDefinitions="Auto">
            <Label Text="ID" FontAttributes="Bold" Grid.Column="0" HorizontalOptions="Start" />
            <Label Text="Назва готелю" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Start" />
            <Label Text="Місцезнаходження" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="Start" />
            <Label Text="Доступні кімнати" FontAttributes="Bold" Grid.Column="3" HorizontalOptions="Start" />
            <Label Text="Ціна за ніч" FontAttributes="Bold" Grid.Column="4" HorizontalOptions="Start" />
        </Grid>

        <!-- Таблиця для відображення списку готелів -->
        <CollectionView x:Name="HotelsCollectionView"
                        ItemsSource="{Binding Hotels}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*, 2*, *, *, *" RowDefinitions="Auto">
                        <Label Text="{Binding Id}" Grid.Column="0" />
                        <Label Text="{Binding Name}" Grid.Column="1" />
                        <Label Text="{Binding Location}" Grid.Column="2" />
                        <Label Text="{Binding AvailableRooms}" Grid.Column="3" />
                        <Label Text="{Binding PricePerNight}" Grid.Column="4" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопки для додаткових дій -->
        <Button Text="Обрати файл JSON" Clicked="OnChooseFileClicked" />
        <Button Text="Зберегти зміни до файлу" Clicked="OnSaveChangesClicked" />
        <Button Text="Про програму" Clicked="OnAboutClicked" />
        <Button Text="Додати готель" Clicked="OnAddHotelClicked" />
        <Button Text="Редагувати готель" Clicked="OnEditHotelClicked" />
        <Button Text="Пошук за місцем розташування" Clicked="OnSearchByLocationClicked" />
        <Button Text="Пошук за діапазоном цін" Clicked="OnSearchByPriceRangeClicked" />
        <Button Text="Пошук за кількістю кімнат" Clicked="OnSearchByAvailabilityClicked" />
        <Button Text="Видалити готель" Clicked="OnRemoveHotelClicked" />
    </StackLayout>
</ContentPage>
