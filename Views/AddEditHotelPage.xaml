<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelBookingSystem.AddEditHotelPage">
    <StackLayout Padding="10">
        <Label Text="{Binding PageTitle}" FontSize="Large" HorizontalOptions="Center" />
        
        <Label Text="Назва готелю"  />
        <Entry x:Name="NameEntry"  Text="{Binding Hotel.Name}" />

        <Label Text="Місцезнаходження"   />
        <Entry x:Name="LocationEntry" Text="{Binding Hotel.Location}" />

        <Label Text="Доступні кімнати"  />
        <Entry x:Name="RoomsEntry" Text="{Binding Hotel.AvailableRooms}" Keyboard="Numeric" />

        <Label Text="Ціна за ніч"  />
        <Entry x:Name="PriceEntry" Text="{Binding Hotel.PricePerNight}" Keyboard="Numeric" />
        

        <Button Text="Зберегти" Command="{Binding SaveCommand}" />
        <Button Text="Скасувати" Command="{Binding CancelCommand}" />
    </StackLayout>
</ContentPage>
